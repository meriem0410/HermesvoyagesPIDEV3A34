<div class="card">
    <div class="card-body">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    {{ form_start(form, {'attr': {'class': 'form'}}) }}
                    {{ form_widget(form) }}
                    <div class="text-center mt-3">
                        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
